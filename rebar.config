{dialyzer, [
    {warnings, [
        unknown,
        unmatched_returns,
        error_handling,
        underspecs
        % overspecs, specdiffs
    ]}
]}.

{alias, [
    {format, [
        {do, "default as format fmt -w"}
    ]},
    {format_check, [
        {do, "default as format fmt -c"}
    ]},
    {run_test, [
        {ct, "--sname=ct1"}
    ]},
    {cover_test, [
        {ct, "--sname=ct1 --cover"}
    ]},
    {all, [
        format,
        run_test,
        dialyzer
    ]}
]}.

{profiles, [
    {format, [
        {plugins, [erlfmt]}
    ]},
    {test, [
        {plugins, [
            {rebar3_codecov, "0.4.0"}
        ]}
    ]}
]}.
