{dialyzer, [
    {warnings, [
        unknown,
        unmatched_returns,
        error_handling,
        underspecs
        % overspecs, specdiffs
    ]}
]}.

{alias, [
    {format, [
        {do, "default as format fmt -w"}
    ]},
    {format_check, [
        {do, "default as format fmt -c"}
    ]},
    {run_tests, [
        {ct, "--sname=ct1"}
    ]},
    {cover_tests, [
        {ct, "--sname=ct1 --cover"}
    ]},
    {find_dead_code, [
        {do, "default as hank hank"}
    ]},
    {all, [
        format,
        run_tests,
        xref,
        dialyzer,
        find_dead_code
    ]}
]}.

{profiles, [
    {format, [
        {plugins, [erlfmt]}
    ]},
    {hank, [
        {plugins, [rebar3_hank]}
    ]},
    {test, [
        {plugins, [
            {rebar3_codecov, "0.5.0"}
        ]}
    ]}
]}.
