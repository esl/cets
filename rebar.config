{dialyzer, [
    {warnings, [
        unknown,
        unmatched_returns,
        error_handling,
        extra_return,
        missing_return,
        underspecs
        % overspecs, specdiffs
    ]}
]}.

%% Enables "rebar3 fmt" command
{project_plugins, [erlfmt]}.

{profiles, [
    {test, [
        {plugins, [
            {rebar3_codecov, "0.4.0"}
        ]}
    ]},
    {grad, [
        {plugins, [
            {gradualizer, {git, "https://github.com/josefs/Gradualizer.git", {branch, "master"}}}
        ]}
    ]}
]}.
